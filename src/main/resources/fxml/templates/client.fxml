<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" prefHeight="450" prefWidth="800"
  stylesheets="styles/main.css"
  type="StackPane" xmlns="http://javafx.com/javafx/8.0.121">
  <BorderPane fx:id="borderPane">
    <top>
      <VBox style="-fx-border-width: 0 0 1 0; -fx-border-color: #202020;"
        BorderPane.alignment="CENTER"
        alignment="CENTER">
        <HBox VBox.vgrow="ALWAYS" alignment="CENTER" prefHeight="40.0">
          <Button mnemonicParsing="false" text="Home" fx:id="homeButton">
            <HBox.margin>
              <Insets right="15.0"/>
            </HBox.margin>
          </Button>
          <TextField style="-fx-background-radius: 3 0 0 3;" HBox.hgrow="ALWAYS"
            promptText="Enter a business name or category..." fx:id="searchBar"/>
          <ComboBox style="-fx-background-radius: 0 3 3 0;" fx:id="searchFieldComboBox">
            <items>
              <FXCollections fx:factory="observableArrayList">
                <String fx:value="Businesses"/>
                <String fx:value="Categories"/>
              </FXCollections>
            </items>
            <value>
              <String fx:value="Businesses"/>
            </value>
            <HBox.margin>
              <Insets right="7.0"/>
            </HBox.margin>
          </ComboBox>
          <Label text="Near: "/>

          <TextField style="-fx-background-radius: 3 0 0 3;" HBox.hgrow="ALWAYS"
            promptText="City, State" fx:id="areaSearchBar"/>
          <Button style="-fx-background-radius: 0 3 3 0;" mnemonicParsing="false"
            text="Search" fx:id="searchButton">
            <cursor>
              <Cursor fx:constant="HAND"/>
            </cursor>
          </Button>

          <MenuButton mnemonicParsing="false" text="My Account">
            <items>
              <MenuItem mnemonicParsing="false" text="Login" fx:id="menuLoginButton"/>
              <MenuItem mnemonicParsing="false" text="Sign Up" fx:id="menuSignUpButton"/>
            </items>
            <HBox.margin>
              <Insets left="15.0"/>
            </HBox.margin>
          </MenuButton>
        </HBox>
        <padding>
          <Insets bottom="3.0" left="10.0" right="10.0"/>
        </padding>
      </VBox>
    </top>
    <center>
      <ScrollPane BorderPane.alignment="CENTER" cache="true" cacheHint="SPEED" fitToHeight="true"
        fitToWidth="true" hbarPolicy="NEVER" styleClass="edge-to-edge">
        <AnchorPane minHeight="0.0" minWidth="0.0" fx:id="anchorPane"/>
        <padding>
          <Insets left="10.0" right="10.0" top="5.0"/>
        </padding>
      </ScrollPane>
    </center>
  </BorderPane>
</fx:root>
